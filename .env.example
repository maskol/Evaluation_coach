# Evaluation Coach - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# JIRA CONFIGURATION
# ============================================================================

# Your Jira instance URL (without trailing slash)
# For Jira Cloud: https://your-company.atlassian.net
# For Jira Server: https://jira.your-company.com
JIRA_BASE_URL=https://your-company.atlassian.net

# Your Jira email address
JIRA_EMAIL=your-email@company.com

# Jira API Token
# Get from: https://id.atlassian.com/manage/api-tokens
JIRA_API_TOKEN=your-api-token-here

# Optional: Disable SSL verification (not recommended for production)
JIRA_VERIFY_SSL=true

# ============================================================================
# LLM CONFIGURATION
# ============================================================================

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model to use for reasoning
OPENAI_MODEL=gpt-4-turbo-preview

# Optional: Use local LLM with Ollama instead
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database URL
# SQLite (development): sqlite:///./data/evaluation_coach.db
# PostgreSQL (production): postgresql://user:password@localhost:5432/evaluation_coach
DATABASE_URL=sqlite:///./data/evaluation_coach.db

# ============================================================================
# VECTOR STORE CONFIGURATION
# ============================================================================

# Vector store directory
VECTOR_STORE_PATH=./data/vector_store

# Embedding model
EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000

# Enable CORS (for frontend development)
ENABLE_CORS=true

# ============================================================================
# LANGSMITH (OPTIONAL - FOR MONITORING)
# ============================================================================

# LangSmith API Key (optional, for tracing and monitoring)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your-langsmith-api-key
# LANGCHAIN_PROJECT=evaluation-coach

# ============================================================================
# CUSTOM FIELD MAPPING
# ============================================================================

# Jira custom field IDs vary by instance. Map them here.
# Find your field IDs in Jira Admin > Issues > Custom Fields

# Story Points
JIRA_CUSTOM_FIELD_STORY_POINTS=customfield_10016

# Sprint
JIRA_CUSTOM_FIELD_SPRINT=customfield_10020

# Epic Link
JIRA_CUSTOM_FIELD_EPIC_LINK=customfield_10014

# Team (if you have a custom field)
JIRA_CUSTOM_FIELD_TEAM=customfield_10030

# ART / Agile Release Train (if you have a custom field)
JIRA_CUSTOM_FIELD_ART=customfield_10031

# Program Increment (if you have a custom field)
JIRA_CUSTOM_FIELD_PI=customfield_10032

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache TTL in seconds (how long to cache Jira data)
CACHE_TTL_SECONDS=3600

# Enable caching
ENABLE_CACHE=true
